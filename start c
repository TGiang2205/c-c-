bai_3: ax^2 + bx +c =0
#include <iostream>
#include <conio.h>
#include <math.h>
using namespace std;
 int main()
 {
     float a, b, c, delta, x1, x2;
     cout << "Nhap a = ";
     cin >> a;
     cout << Nhap b = ";
     cin >> b;
     cout << "Nhap c = ";
     cin >> c;
     if(a == 0) {
        if(b == 0) {
           if(c == 0) {
              cout << "Ptr vo so nghiem" << endl;
           } else {
              cout << "Ptr vo nghiem" << endl;
           }
        } else {
           delta = pow(b, 2) - 4*a*c;
           if(delta > 0) {
               x1 = (-b+sqrt(delta))/(2*a);
               x2 = (-b-sqrt(delta))/(2*a);
               cout << "Nghiem thu nhat x1 = " << x1 << endl;
               cout << "Nghiem thu hai x2 = " << x2 << endl;
            } else if ( delta ==0) {
               cout << "Ptr co nghiem kep : x1 = x2 = " << -b/2*a << endl;
            } else {
               cout << "Ptr vo nghiem" << endl;
            }
         }
         return 0;
}
          

